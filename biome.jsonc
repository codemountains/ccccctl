{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": ["src/**", "*.ts", "*.js", "*.json"]
  },
  "formatter": {
    "enabled": true
  },
  "json": {
    "parser": {
      "allowComments": false
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    }
  }
}
